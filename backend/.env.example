LOG_LEVEL=info
LOG_FORMAT=simple
LOG_SLOW_REQUEST_THRESHOLD=500
LOG_SKIP_PATHS=/health

# Authentication Configuration
JWT_SECRET=your-super-secret-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-refresh-secret-key-minimum-32-characters
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password123
DB_NAME=chioma_db

# Application Configuration
NODE_ENV=development
PORT=3000

# Email Configuration (for password reset emails)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@chioma.app

# Frontend Configuration (for password reset links)
FRONTEND_URL=http://localhost:3001
PASSWORD_RESET_URL=http://localhost:3001/reset-password
